<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAAE8E"

    tools:context="com.example.android.helloandroid.MainActivity">



    <ImageView
        android:id="@+id/UdacityImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/udacity"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/TextView1"
        android:layout_below="@id/UdacityImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Who are We ???"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#683472"
        />


    <TextView
        android:id="@+id/TextView2"
        android:layout_toRightOf="@id/TextView1"
        android:layout_below="@id/UdacityImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Udacity"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textColor="#683472"
        />

    <TextView
        android:id="@+id/TextView3"
        android:layout_below="@id/TextView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="What do we do ???"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#2DCDA7"
        />


    <TextView
        android:id="@+id/TextView4"
        android:layout_toRightOf="@id/TextView3"
        android:layout_below="@id/TextView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Provide best in industry courses"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textColor="#2DCDA7"

        />

    <TextView
        android:id="@+id/TextView5"
        android:layout_below="@id/TextView4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="How to contact us???"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#336FA0"
        />


    <TextView
        android:id="@+id/TextView6"
        android:layout_toRightOf="@id/TextView5"
        android:layout_below="@id/TextView4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="650-555-5555"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textColor="#336FA0"
        />



    <TextView
        android:id="@+id/TextView7"
        android:layout_below="@id/TextView5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Our website:- "
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#F46262"
        />


    <TextView
        android:id="@+id/TextView8"
        android:layout_toRightOf="@id/TextView7"
        android:layout_below="@id/TextView5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="www.udacity.com"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textColor="#F46262"
        />


    <TextView
        android:id="@+id/TextView9"
        android:layout_below="@id/TextView7"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Where to reach us???"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#9C0DA0"
        android:layout_marginLeft="5dp"
        />


    <TextView
        android:id="@+id/TextView10"
        android:layout_below="@id/TextView9"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2645 Latham Street"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="#9C0DA0"
        android:layout_marginLeft="5dp"
        />



    <TextView
        android:id="@+id/TextView11"
        android:layout_below="@id/TextView10"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mountain View"
        android:textSize="15sp"
        android:textColor="#9C0DA0"
        android:layout_marginLeft="5dp"
        />


    <TextView
        android:id="@+id/TextView12"
        android:layout_below="@id/TextView11"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CA 94043"
        android:textSize="15sp"
        android:textColor="#9C0DA0"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/TextView13"
        android:layout_below="@id/TextView12"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="How to reach us ???"
        android:textSize="15sp"
        android:textColor="#A06128"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_margin="5dp"
        />

    <ImageView
        android:id="@+id/UdacityImage_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextView13"
        android:src="@drawable/udacity_location"
        android:scaleType="centerCrop"
        />


</RelativeLayout>
